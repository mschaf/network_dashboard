.panel.-fullscreen
  %h5
    Hosts

  %table.table
    %thead
      %tr
        %th MAC
        %th IPv4
        %th
        %th Hostname

    %tbody
      - @hosts.each do |host|
        %tr
          %td= host.macs.map(&:address_string_with_vendor).join ', '
          - ips = host.macs.map(&:ips).flatten
          %td= ips.map(&:address).join ', '
          %td

          %td= ips.map(&:hostnames).flatten.map(&:name).join ', '
